<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.adjara.net" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:largeHeap="true"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:replace="android:icon" >
        <activity
            android:name="com.adjara.net.MainActivity"
            android:label="adjaranet"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.adjara.net.MoviePageActivity"
            android:label="კინო"
            android:parentActivityName="com.adjara.net.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.adjara.net.MainActivity" />
        </activity>
        <activity
            android:name="com.adjara.net.FullScreenMovie"
            android:label="@string/title_activity_full_screen_movie"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.adjara.net.settingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.adjara.net.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.adjara.net.MainActivity" />
        </activity>
        <activity
            android:name="com.adjara.net.serie_page_activity"
            android:label="@string/title_activity_serie_page_activity"
            android:parentActivityName=".SeriesActiviry"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.adjara.net.SeriesActiviry" />
        </activity>
        <activity
            android:name="io.vov.vitamio.activity.InitActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboard|keyboardHidden"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <receiver android:name="com.adjara.net.broadcastreceivers.MyBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.adjara.net.broadcastreceivers.CheckEpisodesBroadcastReceiver" >
        </receiver>

        <service
            android:name="com.adjara.net.services.StartUpService"
            android:enabled="true"
            android:exported="true" >
        </service>
        <service
            android:name="com.adjara.net.services.CheckNewEpisodes"
            android:enabled="true"
            android:exported="true" >
        </service>

        <meta-data
            android:name="DATABASE"
            android:value="adjaranet.db" />
        <meta-data
            android:name="VERSION"
            android:value="7" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.adjara.net" />

        <activity
            android:name="com.adjara.net.GeoMoviesCollecitonActivity"
            android:label="@string/title_activity_geo_movies_colleciton"
            android:parentActivityName="com.adjara.net.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.adjara.net.MainActivity" />
        </activity>
        <activity
            android:name="com.adjara.net.NewsCollectionActivity"
            android:label="@string/title_activity_news_collection"
            android:parentActivityName="com.adjara.net.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.adjara.net.MainActivity" />
        </activity>
        <activity
            android:name="com.adjara.net.HistoryPageActivity"
            android:label="@string/title_activity_history_page"
            android:parentActivityName="com.adjara.net.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.adjara.net.MainActivity" />
        </activity>
        <activity
            android:name="com.adjara.net.CollectionMoviesActivity"
            android:label="@string/title_activity_collection_movies"
            android:parentActivityName="com.adjara.net.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.adjara.net.MainActivity" />
        </activity>
        <activity
            android:name="com.adjara.net.WatchLaterActivity"
            android:label="@string/title_activity_watch_later"
            android:parentActivityName="com.adjara.net.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.adjara.net.MainActivity" />
        </activity>
        <activity
            android:name="com.adjara.net.ActorMoviesActivity"
            android:label="@string/title_activity_actor_movies"
            android:parentActivityName="com.adjara.net.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.adjara.net.MainActivity" />
        </activity>
    </application>

</manifest>
