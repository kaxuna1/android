<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kgelashvili.moviesapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:replace="android:icon" >
        <activity
            android:name=".MainActivity"
            android:label="Adjaranet"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MoviePageActivity"
            android:label="კინო"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kgelashvili.moviesapp.MainActivity" />
        </activity>
        <activity
            android:name=".FullScreenMovie"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_full_screen_movie"
            android:parentActivityName=".MoviePageActivity"
            android:screenOrientation="userLandscape"
            android:theme="@style/FullscreenTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kgelashvili.moviesapp.MoviePageActivity" />
        </activity>
        <activity
            android:name=".settingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kgelashvili.moviesapp.MainActivity" />
        </activity>
        <activity
            android:name=".serie_page_activity"
            android:label="@string/title_activity_serie_page_activity"
            android:parentActivityName=".SeriesActiviry"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kgelashvili.moviesapp.SeriesActiviry" />
        </activity>
        <activity android:name="io.vov.vitamio.activity.InitActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboard|keyboardHidden"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateAlwaysHidden"/>

        <receiver android:name=".broadcastreceivers.MyBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
            </intent-filter>
        </receiver>
        <receiver android:name=".broadcastreceivers.CheckEpisodesBroadcastReceiver" >
        </receiver>

        <service
            android:name=".services.StartUpService"
            android:enabled="true"
            android:exported="true" >
        </service>
        <service
            android:name=".services.CheckNewEpisodes"
            android:enabled="true"
            android:exported="true" >
        </service>

        <meta-data
            android:name="DATABASE"
            android:value="adjaranet.db" />
        <meta-data
            android:name="VERSION"
            android:value="7" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.kgelashvili.moviesapp" />

        <activity
            android:name=".GeoMoviesCollecitonActivity"
            android:label="@string/title_activity_geo_movies_colleciton"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kgelashvili.moviesapp.MainActivity" />
        </activity>
        <activity
            android:name=".NewsCollectionActivity"
            android:label="@string/title_activity_news_collection"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kgelashvili.moviesapp.MainActivity" />
        </activity>
        <activity
            android:name=".HistoryPageActivity"
            android:label="@string/title_activity_history_page"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kgelashvili.moviesapp.MainActivity" />
        </activity>
    </application>

</manifest>
