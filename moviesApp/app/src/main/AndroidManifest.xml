<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kgelashvili.moviesapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="Adjaranet"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MoviePageActivity"
            android:label="კინო"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kgelashvili.moviesapp.MainActivity" />
        </activity>
        <activity
            android:name=".FullScreenMovie"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_full_screen_movie"
            android:parentActivityName=".MoviePageActivity"
            android:screenOrientation="userLandscape"
            android:theme="@style/FullscreenTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kgelashvili.moviesapp.MoviePageActivity" />
        </activity>
        <activity
            android:name=".settingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kgelashvili.moviesapp.MainActivity" />
        </activity>
        <activity
            android:name=".SeriesActiviry"
            android:label="@string/title_activity_series_activiry"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kgelashvili.moviesapp.MainActivity" />
        </activity>
        <activity
            android:name=".serie_page_activity"
            android:label="@string/title_activity_serie_page_activity"
            android:parentActivityName=".SeriesActiviry"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kgelashvili.moviesapp.SeriesActiviry" />
        </activity>

        <receiver android:name=".broadcastreceivers.MyBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver android:name=".broadcastreceivers.CheckEpisodesBroadcastReceiver" >
        </receiver>

        <service
            android:name=".services.StartUpService"
            android:enabled="true"
            android:exported="true" >
        </service>
        <service
            android:name=".services.CheckNewEpisodes"
            android:enabled="true"
            android:exported="true" >
        </service>
    </application>

</manifest>
