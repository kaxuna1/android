<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainActivityRelative">
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TabHost
            android:id="@+id/tabHost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:scrollbars="none">

                    <TabWidget
                        android:id="@android:id/tabs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                     >></TabWidget>
                </HorizontalScrollView>

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/tab0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:descendantFocusability="beforeDescendants"
                        android:focusableInTouchMode="true"
                        android:orientation="vertical"
                        android:weightSum="1">


                        <com.kgelashvili.moviesapp.Classes.ScrollViewExt
                            android:id="@+id/scrollView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/horizontalScrollView"
                            android:scrollbars="none">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:focusableInTouchMode="true"
                                android:paddingLeft="@dimen/carddemo_list_padding"
                                android:paddingRight="@dimen/carddemo_list_padding">

                                <!--<ListView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/moviesListView"
                                    android:layout_below="@+id/searchBox"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentStart="true" />-->
                                <TextView
                                    android:id="@+id/textView5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ქართულად გახმოვანებული ფილმები"
                                    android:textAppearance="?android:attr/textAppearanceMedium" />

                                <HorizontalScrollView
                                    android:id="@+id/horizontalScrollView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/textView5"
                                    android:layout_weight="0.04"
                                    android:scrollbars="none">

                                    <LinearLayout
                                        android:id="@+id/geoMoviesLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        android:paddingLeft="@dimen/carddemo_list_padding"
                                        android:paddingRight="@dimen/carddemo_list_padding">

                                    </LinearLayout>
                                </HorizontalScrollView>

                                <TextView
                                    android:id="@+id/textView6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/horizontalScrollView"
                                    android:text="პრემიერა"
                                    android:textAppearance="?android:attr/textAppearanceMedium" />

                                <HorizontalScrollView
                                    android:id="@+id/horizontalScrollView2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/textView6"
                                    android:layout_weight="0.04"
                                    android:scrollbars="none">

                                    <LinearLayout
                                        android:id="@+id/premierMoviesLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        android:paddingLeft="@dimen/carddemo_list_padding"
                                        android:paddingRight="@dimen/carddemo_list_padding">

                                    </LinearLayout>
                                </HorizontalScrollView>

                                <TextView
                                    android:id="@+id/textView7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/horizontalScrollView2"
                                    android:text="ახალი დამატებული ფილმები"
                                    android:textAppearance="?android:attr/textAppearanceMedium" />

                                <HorizontalScrollView
                                    android:id="@+id/horizontalScrollView3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/textView7"
                                    android:layout_weight="0.04"
                                    android:scrollbars="none">

                                    <LinearLayout
                                        android:id="@+id/newAddedMoviesLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        android:paddingLeft="@dimen/carddemo_list_padding"
                                        android:paddingRight="@dimen/carddemo_list_padding">

                                    </LinearLayout>
                                </HorizontalScrollView>

                                <TextView
                                    android:id="@+id/textView8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/horizontalScrollView3"
                                    android:text="ახალი ეპიზოდები"
                                    android:textAppearance="?android:attr/textAppearanceMedium" />

                                <HorizontalScrollView
                                    android:id="@+id/horizontalScrollView4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/textView8"
                                    android:layout_weight="0.04"
                                    android:scrollbars="none">

                                    <LinearLayout
                                        android:id="@+id/newEpisodesLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        android:paddingLeft="@dimen/carddemo_list_padding"
                                        android:paddingRight="@dimen/carddemo_list_padding">

                                    </LinearLayout>
                                </HorizontalScrollView>


                            </RelativeLayout>
                        </com.kgelashvili.moviesapp.Classes.ScrollViewExt>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:descendantFocusability="beforeDescendants"
                        android:focusableInTouchMode="true"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <EditText
                            android:id="@+id/searchBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:gravity="center"
                            android:hint="ძებნა"
                            android:singleLine="true" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:focusableInTouchMode="true"
                            android:paddingLeft="@dimen/carddemo_list_padding"
                            android:paddingRight="@dimen/carddemo_list_padding">

                            <!--<ListView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/moviesListView"
                                android:layout_below="@+id/searchBox"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentStart="true" />-->

                            <it.gmariotti.cardslib.library.view.CardListView
                                android:id="@+id/carddemo_list_cursor2"
                                style="@style/native_list_external"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:paddingLeft="@dimen/carddemo_list_padding"
                                android:paddingRight="@dimen/carddemo_list_padding"
                                card:list_card_layout_resourceID="@layout/carddemo_native_list_cursor_layout" />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <it.gmariotti.cardslib.library.view.CardListView
                                android:id="@+id/carddemo_list_cursor3"
                                style="@style/native_list_external"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/carddemo_list_padding"
                                android:paddingRight="@dimen/carddemo_list_padding"
                                card:list_card_layout_resourceID="@layout/carddemo_native_list_cursor_layout" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:tools="http://schemas.android.com/tools"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            tools:context="com.kgelashvili.moviesapp.SeriesActiviry">

                            <EditText
                                android:id="@+id/searchBoxSeries"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:gravity="center"
                                android:hint="ძებნა"
                                android:singleLine="true" />

                            <it.gmariotti.cardslib.library.view.CardListView
                                android:id="@+id/seriesList"
                                style="@style/native_list_external"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/searchBoxSeries"
                                android:paddingLeft="@dimen/carddemo_list_padding"
                                android:paddingRight="@dimen/carddemo_list_padding"
                                card:list_card_layout_resourceID="@layout/carddemo_native_list_cursor_layout" />

                        </RelativeLayout>
                    </LinearLayout>

                </FrameLayout>
            </LinearLayout>
        </TabHost>


    </RelativeLayout>

    <ListView
        android:id="@+id/drawer2"
        android:layout_width="@dimen/drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#F3F3F4"
        android:choiceMode="singleChoice"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"></ListView>
</android.support.v4.widget.DrawerLayout>
</RelativeLayout>