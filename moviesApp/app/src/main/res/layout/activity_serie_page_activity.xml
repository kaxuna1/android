<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainfragmentframe">
    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tabHost"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TabWidget>
        </HorizontalScrollView>
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/tab1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                tools:context="com.kgelashvili.moviesapp.serie_page_activity"
                xmlns:fancy="http://schemas.android.com/apk/res-auto">

                <RelativeLayout
                    android:paddingTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativeLayout6">
                    <VideoView android:id="@+id/myserieview"
                        android:layout_width="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_height="200dp">
                    </VideoView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/relativeLayout6"
                    android:id="@+id/relativeLayout">





                    <ListView

                        android:layout_width="68dp"
                        android:paddingTop="10dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/listViewSerie"
                        android:layout_weight="0.93"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_toStartOf="@+id/tableLayout"
                        android:layout_toLeftOf="@+id/tableLayout"
                        android:layout_below="@+id/langBtnSerie"
                        android:layout_alignParentBottom="true" />

                    <TableLayout
                        android:paddingTop="23dp"
                        android:layout_width="192dp"
                        android:layout_height="50dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:id="@+id/tableLayout">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="20dp"
                                android:id="@+id/imdbImg"
                                android:layout_column="1"
                                android:src="@drawable/imdb" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="imdbText"
                                android:id="@+id/imdbRating"
                                android:layout_column="3"
                                android:layout_below="@+id/tableLayout2"/>
                        </TableRow>





                    </TableLayout>
                    <TableLayout
                        android:paddingTop="23dp"
                        android:paddingLeft="5dp"
                        android:layout_width="192dp"
                        android:layout_height="50dp"
                        android:id="@+id/tableLayout2"
                        android:layout_below="@+id/tableLayout"
                        android:layout_toEndOf="@+id/listViewSerie"
                        android:layout_toRightOf="@+id/listViewSerie">




                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="თარიღი:"
                                android:id="@+id/textView"
                                android:layout_column="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Medium Text"
                                android:id="@+id/movieDate"
                                android:layout_column="3" />
                        </TableRow>



                    </TableLayout>

                    <RelativeLayout
                        android:paddingLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/tableLayout2"
                        android:layout_toEndOf="@+id/listViewSerie"
                        android:layout_toRightOf="@+id/listViewSerie"
                        android:id="@+id/relativeLayout2">

                        <TextView
                            android:paddingTop="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="შინაარსი"
                            android:id="@+id/textView2"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Small Text"
                            android:id="@+id/descriptionTxt"
                            android:layout_below="@+id/textView2"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>

                    <mehdi.sakout.fancybuttons.FancyButton
                        android:layout_marginTop="15dp"
                        android:id="@+id/langBtnSerie"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_below="@+id/seasonChangeBtn"
                        fancy:fb_borderColor="#FFFFFF"
                        fancy:fb_borderWidth="1dp"
                        fancy:fb_defaultColor="#3b5998"
                        fancy:fb_focusColor="#5474b8"
                        fancy:fb_fontIconResource="&#xf1ab;"
                        fancy:fb_iconPosition="left"
                        fancy:fb_radius="30dp"
                        fancy:fb_text="ენები"
                        fancy:fb_textColor="#FFFFFF"
                        fancy:fb_textSize="18px"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignRight="@+id/listViewSerie"
                        android:layout_alignEnd="@+id/listViewSerie" />
                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/downloadBtn"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        fancy:fb_borderColor="#FFFFFF"

                        fancy:fb_borderWidth="1dp"
                        fancy:fb_defaultColor="#7ab800"
                        fancy:fb_focusColor="#9bd823"
                        fancy:fb_fontIconResource="&#xf0ed;"
                        fancy:fb_iconPosition="left"
                        fancy:fb_radius="30dp"
                        fancy:fb_text=""
                        fancy:fb_textColor="#FFFFFF"
                        fancy:fb_textSize="18px"
                        android:layout_alignBottom="@+id/tableLayout"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/qualBtn"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        fancy:fb_borderColor="#FFFFFF"
                        fancy:fb_borderWidth="1dp"
                        fancy:fb_defaultColor="#7ab800"
                        fancy:fb_focusColor="#9bd823"
                        fancy:fb_fontIconResource="&#xf008;"
                        fancy:fb_iconPosition="left"
                        fancy:fb_radius="30dp"
                        fancy:fb_text="ხარისხი"
                        fancy:fb_textColor="#FFFFFF"
                        fancy:fb_textSize="14px"
                        android:layout_alignTop="@+id/downloadBtn"
                        android:layout_toRightOf="@+id/downloadBtn"
                        android:layout_toEndOf="@+id/downloadBtn" />




                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/seasonChangeBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        fancy:fb_ghost="true"
                        fancy:fb_focusColor="#ffa8f192"
                        fancy:fb_fontIconResource="&#xf122;"
                        fancy:fb_radius="30dp"
                        fancy:fb_iconPosition="left"
                        fancy:fb_borderWidth="2dp"
                        fancy:fb_borderColor="#7ed862"
                        fancy:fb_text="სეზონი"
                        fancy:fb_textSize="18px"
                        fancy:fb_textColor="#ff439bf1"

                        android:layout_alignRight="@+id/langBtnSerie"
                        android:layout_alignEnd="@+id/langBtnSerie"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_above="@+id/relativeLayout2" />

                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
            <LinearLayout
                android:id="@+id/tab2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:id="@+id/cardview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    card_view:cardBackgroundColor="@android:color/white"
                    card_view:cardCornerRadius="8dp">

                    <com.kgelashvili.moviesapp.Classes.ScrollViewExt
                        android:id="@+id/scrollView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/horizontalScrollView"
                        android:scrollbars="none">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:focusableInTouchMode="true"
                            android:paddingLeft="@dimen/carddemo_list_padding"
                            android:paddingRight="@dimen/carddemo_list_padding">



                            <TextView
                                android:paddingTop="10dp"
                                android:id="@+id/textView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/horizontalScrollView"
                                android:text="მსახიობები"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <HorizontalScrollView
                                android:id="@+id/horizontalScrollView6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textView6"
                                android:layout_weight="0.04"
                                android:scrollbars="none">

                                <LinearLayout
                                    android:id="@+id/actorsLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:paddingLeft="@dimen/carddemo_list_padding"
                                    android:paddingRight="@dimen/carddemo_list_padding">

                                </LinearLayout>
                            </HorizontalScrollView>


                        </RelativeLayout>
                    </com.kgelashvili.moviesapp.Classes.ScrollViewExt>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tab3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <WebView
                    android:id="@+id/webView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </WebView>

            </LinearLayout>
        </FrameLayout>
        </LinearLayout>
    </TabHost>

</FrameLayout>