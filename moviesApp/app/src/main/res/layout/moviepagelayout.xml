<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/moviePageRelative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.kgelashvili.moviesapp.serie_page_activity"
    xmlns:fancy="http://schemas.android.com/apk/res-auto">
    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tabHost"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TabWidget>
            </HorizontalScrollView>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/relativeLayout5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:paddingTop="10dp"
                            android:id="@+id/relativeLayout4"
                            android:layout_below="@id/movieName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <VideoView
                                android:id="@+id/myvideoview"
                                android:layout_width="fill_parent"
                                android:layout_height="200dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"></VideoView>
                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/relativeLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/relativeLayout4">



                            <TableLayout

                                android:id="@+id/tableLayout"
                                android:layout_width="192dp"
                                android:layout_height="50dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:paddingTop="23dp">

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:id="@+id/imdbImg"
                                        android:layout_width="50dp"
                                        android:layout_height="20dp"
                                        android:layout_column="1"
                                        android:src="@drawable/imdb" />

                                    <TextView
                                        android:id="@+id/imdbRating"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/tableLayout2"
                                        android:layout_column="3"
                                        android:text="imdbText"
                                        android:textAppearance="?android:attr/textAppearanceMedium" />
                                </TableRow>


                            </TableLayout>

                            <TableLayout
                                android:layout_alignParentRight="true"
                                android:id="@+id/tableLayout2"
                                android:layout_width="192dp"
                                android:layout_height="50dp"
                                android:layout_below="@+id/tableLayout"
                                android:paddingTop="23dp"
                                android:paddingLeft="5dp">


                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:id="@+id/textView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_column="1"
                                        android:text="თარიღი:"
                                        android:textAppearance="?android:attr/textAppearanceMedium" />

                                    <TextView
                                        android:id="@+id/movieDate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_column="3"
                                        android:text="Medium Text"
                                        android:textAppearance="?android:attr/textAppearanceMedium" />
                                </TableRow>


                            </TableLayout>

                            <mehdi.sakout.fancybuttons.FancyButton
                                android:layout_marginTop="15dp"
                                android:id="@+id/langBtnSerie"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:layout_toStartOf="@+id/tableLayout"
                                android:layout_toLeftOf="@+id/tableLayout"
                                fancy:fb_borderColor="#FFFFFF"
                                fancy:fb_borderWidth="1dp"
                                fancy:fb_defaultColor="#3b5998"
                                fancy:fb_focusColor="#5474b8"
                                fancy:fb_fontIconResource="&#xf1ab;"
                                fancy:fb_iconPosition="left"
                                fancy:fb_radius="30dp"
                                fancy:fb_text="ენები"
                                fancy:fb_textColor="#FFFFFF"
                                fancy:fb_textSize="18px"/>

                            <mehdi.sakout.fancybuttons.FancyButton
                                android:layout_marginTop="15dp"
                                android:id="@+id/downloadButtonSerie"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:layout_toStartOf="@+id/tableLayout2"
                                android:layout_toLeftOf="@+id/tableLayout2"
                                android:layout_below="@+id/langBtnSerie"
                                fancy:fb_borderColor="#FFFFFF"
                                fancy:fb_borderWidth="1dp"
                                fancy:fb_defaultColor="#7ab800"
                                fancy:fb_focusColor="#9bd823"
                                fancy:fb_fontIconResource="&#xf019;"
                                fancy:fb_iconPosition="left"
                                fancy:fb_radius="30dp"
                                fancy:fb_text="გადმოწერა"
                                fancy:fb_textColor="#FFFFFF"
                                fancy:fb_textSize="18px"/>

                            <RelativeLayout
                                android:paddingLeft="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/tableLayout2"
                                >

                                <TextView
                                    android:paddingTop="20dp"
                                    android:id="@+id/textView2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentTop="true"
                                    android:text="შინაარსი"
                                    android:textAppearance="?android:attr/textAppearanceMedium" />

                                <TextView
                                    android:id="@+id/descriptionTxt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_below="@+id/textView2"
                                    android:text="Small Text"
                                    android:textAppearance="?android:attr/textAppearanceSmall" />
                            </RelativeLayout>



                        </RelativeLayout>


                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <android.support.v7.widget.CardView
                        android:id="@+id/cardview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        card_view:cardBackgroundColor="@android:color/white"
                        card_view:cardCornerRadius="8dp">

                        <com.kgelashvili.moviesapp.Classes.ScrollViewExt
                            android:id="@+id/scrollView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/horizontalScrollView"
                            android:scrollbars="none">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:focusableInTouchMode="true"
                                android:paddingLeft="@dimen/carddemo_list_padding"
                                android:paddingRight="@dimen/carddemo_list_padding">



                                <TextView
                                    android:id="@+id/textView6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/horizontalScrollView"
                                    android:text="მსახიობები"
                                    android:textAppearance="?android:attr/textAppearanceMedium" />

                                <HorizontalScrollView
                                    android:id="@+id/horizontalScrollView6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/textView6"
                                    android:layout_weight="0.04"
                                    android:scrollbars="none">

                                    <LinearLayout
                                        android:id="@+id/actorsLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        android:paddingLeft="@dimen/carddemo_list_padding"
                                        android:paddingRight="@dimen/carddemo_list_padding">

                                    </LinearLayout>
                                </HorizontalScrollView>


                            </RelativeLayout>
                        </com.kgelashvili.moviesapp.Classes.ScrollViewExt>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tab3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <WebView
                        android:id="@+id/webView1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </WebView>

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>


    </TabHost>


</RelativeLayout>