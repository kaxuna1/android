<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/moviePageRelative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kgelashvili.moviesapp.serie_page_activity"
    xmlns:fancy="http://schemas.android.com/apk/res-auto">
    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tabHost"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TabWidget>
            </HorizontalScrollView>


            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.kgelashvili.moviesapp.Classes.ScrollViewExt
                    android:id="@+id/scrollView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/horizontalScrollView"
                    android:scrollbars="none">
                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/relativeLayout5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.CardView
                            android:id="@+id/cardview3"
                            android:foregroundGravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            card_view:cardBackgroundColor="@android:color/white"
                            card_view:cardCornerRadius="8dp">
                        <RelativeLayout

                            android:id="@+id/relativeLayout4"
                            android:layout_below="@id/movieName"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:layout_height="200dp">
                            <VideoView
                                android:id="@+id/myvideoview"
                                android:layout_width="fill_parent"
                                android:layout_height="150dp"></VideoView>

                        </RelativeLayout>
                        </android.support.v7.widget.CardView>


                        <RelativeLayout
                            android:id="@+id/relativeLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/cardview3">


                            <mehdi.sakout.fancybuttons.FancyButton
                                android:id="@+id/langBtnSerie"
                                android:layout_width="120dp"
                                android:layout_height="30dp"
                                fancy:fb_borderColor="#FFFFFF"
                                fancy:fb_borderWidth="1dp"
                                fancy:fb_defaultColor="#3b5998"
                                fancy:fb_focusColor="#5474b8"
                                fancy:fb_fontIconResource="&#xf1ab;"
                                fancy:fb_iconPosition="left"
                                fancy:fb_radius="30dp"
                                fancy:fb_text="ენები"
                                fancy:fb_textColor="#FFFFFF"
                                fancy:fb_textSize="18px"
                                android:layout_alignParentTop="true"
                                android:layout_alignLeft="@+id/cardview1"
                                android:layout_alignStart="@+id/cardview1" />
                            <mehdi.sakout.fancybuttons.FancyButton
                                android:id="@+id/downloadButtonSerie"
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                fancy:fb_borderColor="#FFFFFF"
                                fancy:fb_borderWidth="1dp"
                                fancy:fb_defaultColor="#7ab800"
                                fancy:fb_focusColor="#9bd823"
                                fancy:fb_fontIconResource="&#xf0ed;"                                fancy:fb_iconPosition="left"
                                fancy:fb_radius="30dp"
                                fancy:fb_text=""
                                fancy:fb_textColor="#FFFFFF"
                                fancy:fb_textSize="18px"
                                android:layout_alignParentTop="true"
                                android:layout_toRightOf="@+id/qualBtn"
                                android:layout_toEndOf="@+id/qualBtn"
                                android:layout_marginLeft="5dp" />
                            <mehdi.sakout.fancybuttons.FancyButton
                                android:id="@+id/fullScreenButton"
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                fancy:fb_borderColor="#FFFFFF"
                                fancy:fb_borderWidth="1dp"
                                fancy:fb_defaultColor="#ffb82e0c"
                                fancy:fb_focusColor="#ff911d1a"
                                fancy:fb_fontIconResource="&#xf065;"                                fancy:fb_iconPosition="left"
                                fancy:fb_radius="30dp"
                                fancy:fb_text=""
                                fancy:fb_textColor="#FFFFFF"
                                fancy:fb_textSize="18px"
                                android:layout_alignParentTop="true"
                                android:layout_toRightOf="@+id/downloadButtonSerie"
                                android:layout_toEndOf="@+id/downloadButtonSerie"
                                android:layout_marginLeft="5dp" />
                            <mehdi.sakout.fancybuttons.FancyButton
                                android:id="@+id/qualBtn"
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                fancy:fb_borderColor="#FFFFFF"
                                fancy:fb_borderWidth="1dp"
                                fancy:fb_defaultColor="#7ab800"
                                fancy:fb_focusColor="#9bd823"
                                fancy:fb_fontIconResource="&#xf008;"
                                fancy:fb_iconPosition="left"
                                fancy:fb_radius="30dp"
                                fancy:fb_text="ხარისხი"
                                fancy:fb_textColor="#FFFFFF"
                                fancy:fb_textSize="14px"
                                android:layout_alignTop="@+id/langBtnSerie"
                                android:layout_toRightOf="@+id/langBtnSerie"
                                android:layout_toEndOf="@+id/langBtnSerie"
                                android:layout_marginLeft="5dp" />
                            <mehdi.sakout.fancybuttons.FancyButton
                                android:id="@+id/watchLaterBtn"
                                android:layout_width="200dp"
                                android:layout_height="30dp"
                                fancy:fb_borderColor="#FFFFFF"
                                fancy:fb_borderWidth="1dp"
                                fancy:fb_defaultColor="#ff3788d8"
                                fancy:fb_focusColor="#5474b8"
                                fancy:fb_fontIconResource="&#xf017;"
                                fancy:fb_iconPosition="left"
                                fancy:fb_radius="30dp"
                                fancy:fb_text="ვაპირებ ყურებას"
                                fancy:fb_textColor="#FFFFFF"
                                fancy:fb_textSize="18px"
                                android:layout_below="@+id/langBtnSerie"
                                android:layout_alignLeft="@+id/langBtnSerie"
                                android:layout_alignStart="@+id/langBtnSerie"
                                android:layout_marginTop="5dp" />
                            <android.support.v7.widget.CardView
                                android:id="@+id/cardview1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="8dp"
                                card_view:cardBackgroundColor="@android:color/white"
                                android:layout_below="@+id/watchLaterBtn"
                                card_view:cardCornerRadius="8dp">
                            <RelativeLayout
                                android:paddingLeft="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:id="@+id/relativeLayout3">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="Small Text"
                                    android:id="@+id/durationTxt"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:layout_column="6"
                                    android:layout_alignTop="@+id/textView2"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true" />
                                <TextView
                                    android:paddingTop="20dp"
                                    android:id="@+id/textView2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="შინაარსი"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:layout_below="@+id/tableLayout"
                                    android:layout_alignLeft="@+id/durationTxt"
                                    android:layout_alignStart="@+id/durationTxt" />

                                <TextView
                                    android:id="@+id/descriptionTxt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:paddingBottom="20dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_below="@+id/textView2"
                                    android:text="Small Text"
                                    android:textAppearance="?android:attr/textAppearanceSmall" />

                                <TableLayout

                                    android:id="@+id/tableLayout"
                                    android:layout_width="192dp"
                                    android:layout_height="50dp"
                                    android:paddingTop="18dp"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="10dp"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignLeft="@+id/durationTxt"
                                    android:layout_alignStart="@+id/durationTxt">

                                    <TableRow
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <ImageView
                                            android:id="@+id/imdbImg"
                                            android:layout_width="50dp"
                                            android:layout_height="20dp"
                                            android:layout_column="1"
                                            android:src="@drawable/imdb" />

                                        <TextView
                                            android:id="@+id/imdbRating"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/tableLayout2"
                                            android:layout_column="3"
                                            android:text="imdbText"
                                            android:textAppearance="?android:attr/textAppearanceMedium" />

                                        <TextView
                                            android:id="@+id/movieDate"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_column="5"
                                            android:text="Medium Text"
                                            android:textAppearance="?android:attr/textAppearanceMedium" />


                                    </TableRow>



                                </TableLayout>
                            </RelativeLayout>
                            </android.support.v7.widget.CardView>



                        </RelativeLayout>


                    </RelativeLayout>

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardview2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        card_view:cardBackgroundColor="@android:color/white"
                        card_view:cardCornerRadius="8dp">

                        <com.kgelashvili.moviesapp.Classes.ScrollViewExt
                            android:id="@+id/scrollView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/horizontalScrollView"
                            android:scrollbars="none">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:focusableInTouchMode="true"
                                android:paddingLeft="@dimen/carddemo_list_padding"
                                android:paddingRight="@dimen/carddemo_list_padding">



                                <TextView
                                    android:paddingTop="10dp"
                                    android:id="@+id/textView6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/horizontalScrollView"
                                    android:text="მსახიობები"
                                    android:textAppearance="?android:attr/textAppearanceMedium" />

                                <HorizontalScrollView
                                    android:id="@+id/horizontalScrollView6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/textView6"
                                    android:layout_weight="0.04"
                                    android:scrollbars="none">

                                    <LinearLayout
                                        android:id="@+id/actorsLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        android:paddingLeft="@dimen/carddemo_list_padding"
                                        android:paddingRight="@dimen/carddemo_list_padding">

                                    </LinearLayout>
                                </HorizontalScrollView>
                                <TextView
                                    android:paddingTop="10dp"
                                    android:id="@+id/textView7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/horizontalScrollView6"
                                    android:text="მსგავსი ფილმები"

                                    android:textAppearance="?android:attr/textAppearanceMedium" />

                                <HorizontalScrollView
                                    android:id="@+id/horizontalScrollView7"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/textView7"
                                    android:layout_weight="0.04"
                                    android:scrollbars="none">

                                    <LinearLayout
                                        android:id="@+id/relatedMoviesLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        android:paddingLeft="@dimen/carddemo_list_padding"
                                        android:paddingRight="@dimen/carddemo_list_padding">

                                    </LinearLayout>
                                </HorizontalScrollView>


                            </RelativeLayout>
                        </com.kgelashvili.moviesapp.Classes.ScrollViewExt>
                    </android.support.v7.widget.CardView>

                </LinearLayout>
                </com.kgelashvili.moviesapp.Classes.ScrollViewExt>
                <LinearLayout
                    android:id="@+id/tab3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <android.support.v7.widget.CardView
                        android:id="@+id/cardview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        card_view:cardBackgroundColor="@android:color/white"
                        card_view:cardCornerRadius="8dp">
                    <WebView
                        android:id="@+id/webView1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </WebView>
                    </android.support.v7.widget.CardView>

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>


    </TabHost>


</RelativeLayout>