<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView
        style="@style/carddemo_default_container_padding"
        android:id="@+id/card_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <it.gmariotti.cardslib.library.view.CardViewNative
                android:id="@+id/carddemo_suggested"
                style="@style/card_external"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card:card_layout_resourceID="@layout/carddemo_native_suggested_layout"/>

            <!--May Know Card -->
            <it.gmariotti.cardslib.library.view.CardViewNative
                android:id="@+id/carddemo_MayKnow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/card_external"
                card:card_layout_resourceID="@layout/native_card_thumbnail_layout"/>

            <it.gmariotti.cardslib.library.view.CardViewNative
                android:id="@+id/carddemo_MayKnow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/card_external"
                card:card_layout_resourceID="@layout/native_card_thumbnail_layout"/>

            <it.gmariotti.cardslib.library.view.CardViewNative
                android:id="@+id/carddemo_circleleft"
                style="@style/card_external"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                card:cardBackgroundColor="@color/demo_card_background_color1"
                card:card_layout_resourceID="@layout/carddemo_native_example_circleleft"/>

            <!-- Empty view-->
            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>